@model CapaLogicaNegocio.SignoZodiacal.DatosSignoZodiacal
@{
    ViewData["Title"] = "Formulario";
}
<h1>@ViewData["Title"]</h1>

<p>Completa este formulario para saber tu signo zodiacal.</p>


